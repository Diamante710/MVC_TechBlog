{{#each post as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{blogpost.id}}">{{blogpost.title}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date blogpost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.description}}
    </p>
  </div>
</div>
{{/each}}