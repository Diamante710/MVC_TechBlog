<div class="row mt-4">

  {{#if post.length}}
  <div class="col-md-6 postlist">
    <h3>Current Post:</h3>

    {{#each post as |post}}
    {{> post-info post}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post{{postid}}">{{postname}}</a></h4>
      </div>
      <a href="/dashboard/edit/{{post.id}}"><button class="button mb-5 ml-5 is-warning">Edit</button></a>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{postid}}">Delete</button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>
  </div>
  {{/if}}
</div>

<script src="./js/blogPost.js"></script>